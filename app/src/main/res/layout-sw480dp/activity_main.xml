<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8B8B8"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"

    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/title"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/contenedor2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textAlignment="textEnd"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"

        >

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Salir"
            android:text="Salir" />

        <Button

            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Potencia"
            android:text="X^y" />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Raiz"
            android:text="√" />

        <Button
            android:id="@+id/FUNC"
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:text="Func" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"

        >

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Cuadrado"

            android:text="x^2" />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Borrartodo"

            android:text="C" />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Borrar"

            android:text="DEL" />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Division"
            android:text="÷" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"

        >

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num7"
            android:text="7" />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num8"

            android:text="8" />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num9"
            android:text="9" />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Producto"
            android:text="×" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"

        >

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num4"

            android:text="4" />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num5"
            android:text="5" />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num6"

            android:text="6" />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Resta"
            android:text="-" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"

        >

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num1"

            android:text="1" />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num2"

            android:text="2" />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num3"

            android:text="3" />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Suma"
            android:text="+" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"

        >

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Signo"

            android:text="+/-" />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num0"

            android:text="0" />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="punto"
            android:text="." />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Igual"
            android:text="=" />


    </LinearLayout>


</LinearLayout>