<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:background="#B8B8B8"

    >

    <ImageView
    android:id="@+id/imageView"
    android:layout_width="370dp"
    android:layout_height="78dp"
    android:layout_gravity="center"
    app:srcCompat="@drawable/title"
    tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/contenedor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textAlignment="textEnd"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"

    >

    <Button
        style="@style/botones_calculadora1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_estilo2"
        android:onClick="Salir"
        android:text="Salir" />

    <Button

        style="@style/botones_calculadora1"
        android:onClick="Potencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_estilo2"
        android:text="X^y"
          />

    <Button
        style="@style/botones_calculadora1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_estilo2"
        android:onClick="Raiz"
        android:text="√" />

    <Button
        android:id="@+id/FUNC"
        style="@style/botones_calculadora1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_estilo2"
        android:gravity="bottom"
        android:text="Func" />


</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Cuadrado"

            android:text="x^2" />

        <Button
            style="@style/botones_calculadora1"
            android:onClick="Borrartodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
             
            android:background="@drawable/boton_estilo2"
            />

        <Button
            style="@style/botones_calculadora1"
            android:onClick="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL"
             
            android:background="@drawable/boton_estilo2"/>

        <Button
            style="@style/botones_calculadora1"
            android:onClick="Division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:text="÷"
              />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num7"
            android:text="7"
              />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="num8"
             
            android:background="@drawable/boton_estilo1"
            />

        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo1"
            android:onClick="num9"
            android:text="9"
              />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Producto"
            android:text="×"
              />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <Button
            style="@style/botones_calculadora2"
            android:onClick="num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
             
            android:background="@drawable/boton_estilo1"
            />
        <Button
            style="@style/botones_calculadora2"
            android:onClick="num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:background="@drawable/boton_estilo1"
            />
        <Button
            style="@style/botones_calculadora2"
            android:onClick="num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
             
            android:background="@drawable/boton_estilo1"
            />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:onClick="Resta"
            android:text="-"
              />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <Button
            style="@style/botones_calculadora2"
            android:onClick="num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
             
            android:background="@drawable/boton_estilo1"
            />
        <Button
            style="@style/botones_calculadora2"
            android:onClick="num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
             
            android:background="@drawable/boton_estilo1"
            />
        <Button
            style="@style/botones_calculadora2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="num3"
             
            android:background="@drawable/boton_estilo1"
            />

        <Button
            style="@style/botones_calculadora1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:text="+"
            android:onClick="Suma"
              />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <Button
            style="@style/botones_calculadora1"
            android:onClick="Signo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
             
            android:background="@drawable/boton_estilo2"
            />
        <Button
            style="@style/botones_calculadora2"
            android:onClick="num0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
             
            android:background="@drawable/boton_estilo1"
            />
        <Button
            style="@style/botones_calculadora1"
            android:onClick="punto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:background="@drawable/boton_estilo2"
            />

        <Button
            style="@style/botones_calculadora1"
            android:onClick="Igual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo2"
            android:text="="
              />


    </LinearLayout>


</LinearLayout>