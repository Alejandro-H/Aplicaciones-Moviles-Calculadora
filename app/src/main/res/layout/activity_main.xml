<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edttext"
        >

        <EditText

            android:id="@+id/contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/contenedor2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="textEnd" />
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"

    >
    <Button
        style="@style/Botones_Calculadora"
        android:onClick="Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textSize="20sp"
        android:background="@drawable/co"
        />

    <Button

        style="@style/Botones_Calculadora"
        android:onClick="Potencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/co"
        android:text="X^Y"
        android:textSize="20sp" />

    <Button
        style="@style/Botones_Calculadora"
        android:onClick="Raiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/co"
        android:text="√"
        android:textSize="20sp" />

    <Button
        android:id="@+id/FUNC"
        style="@style/Botones_Calculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/co"
        android:text="Func"
        android:textSize="20sp" />


</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <Button
            style="@style/Botones_Calculadora"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x^2"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="Borrartodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="20sp"
            android:background="@drawable/co"
            />

        <Button
            style="@style/Botones_Calculadora"
            android:onClick="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:textSize="20sp"
            android:background="@drawable/co"/>

        <Button
            style="@style/Botones_Calculadora"
            android:onClick="Division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/co"
            android:text="÷"
            android:textSize="20sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="num7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="num8"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="num9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="Producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×"
            android:textSize="20sp"
            android:background="@drawable/co"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="Resta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:background="@drawable/co"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="num3"
            android:textSize="20sp"
            android:background="@drawable/co"
            />

        <Button
            style="@style/Botones_Calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/co"
            android:text="+"
            android:onClick="Suma"
            android:textSize="20sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="Signo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="num0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:background="@drawable/co"
            />
        <Button
            style="@style/Botones_Calculadora"
            android:onClick="punto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="20sp"
            android:background="@drawable/co"
            />

        <Button
            style="@style/Botones_Calculadora"
            android:onClick="Igual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/co"
            android:text="="
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>